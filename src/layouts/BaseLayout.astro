---
export interface Props {
  title: string;
}

import Footer from "../components/Footer.astro";

const { title } = Astro.props;
import weasel from "../assets/weaselOg.png";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta content="website" property="og:type" />
    <meta content={title} property="og:title" />
    <meta content="wondrous-dolphin-b2df9b.netlify.app" property="og:url" />
    <meta property="og:image" content={weasel} />
    <meta
      content="Write your next project in .weasel, the framework that's 2.7x faster"
      name="description"
    />
    <link rel="icon" type="image/svg+xml" href="/weasel.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-900">
    <main
      class="mx-auto flex max-w-[2400px] flex-col gap-1 rounded-b-3xl bg-[#E9E3D6] p-4 md:p-10"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
