---
import team from "../data/team.json";
const { userName = "Solid Snake" } = Astro.props;
---

<!-- <div
  class="flex flex-col gap-1 md:flex-row"
  x-data={`{ users: '${team}', activeUser: '${team[0].name}'}`}
> -->
<div
  class="flex flex-col gap-1 md:flex-row"
  x-data="{ users: [
    {name: 'Anya Stroud', description: 'Project coordinator, UI designer.', imageSrc: 'anya.webp'}, 
    {name: 'John 117', description: 'Renowned galactic warrior. Develops the Weasel ORM.', imageSrc: 'chief.png'}, 
    {name: 'Solid Snake', description: 'FoxHound. Enjoys messing around with front-ends.', imageSrc: 'snake.png'},
    {name: 'Samus', description: 'Bug hunter. Builds the testing harness. Loves coffee.', imageSrc: 'samus.png'},
    
    ], 
    
    activeUser: 'Anya Stroud'}"
>
  <div class="flex w-auto flex-col rounded-xl bg-white p-5 md:w-1/2 md:p-10">
    <div class="self-start rounded-full bg-[#FAF6EE] px-2 py-1">
      <h1 class="text-2xl font-bold antialiased md:text-4xl md:leading-tight">
        Core team
      </h1>
    </div>
    <div
      class="mt-6 flex flex-col space-y-2 md:flex-row md:justify-between md:space-y-0"
    >
      {
        team.map((member) => (
          <div class="flex space-x-2">
            <div
              class="h-16 w-16 shrink-0 overflow-hidden rounded-full bg-gray-900 p-2 md:h-24 md:w-24"
              x-on:click="open = ! open"
              x-on:mouseover={`activeUser = '${member.name}'`}
            >
              <img
                src={member.imageSrc}
                alt={member.name}
                class="cursor-pointer object-cover"
              />
            </div>
            <div class="px-2 md:hidden">
              <h3 class="text-lg font-bold">{member.name}</h3>
              <p class="text-gray-700">{member.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="hidden w-1/2 rounded-xl bg-zinc-800 p-5 md:flex md:p-10">
    <div class="flex space-x-4" x-transition>
      <img
        x-bind:src="users.find(user => user.name === activeUser).imageSrc"
        alt="solid snake"
        class="h-60"
        x-transition
      />
      <div class="space-y-4">
        <h3
          class="text-4xl font-bold text-white antialiased"
          x-text="activeUser"
          x-transition
        >
        </h3>
        <p
          class="text-xl font-medium text-white"
          x-text="users.find(user => user.name === activeUser).description"
          x-transition
        >
        </p>
      </div>
    </div>
  </div>
</div>
