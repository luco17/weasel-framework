---

<div class="flex flex-col gap-1 md:flex-row">
  <div
    class="flex-0 relative flex w-auto flex-col justify-between gap-5 overflow-visible rounded-xl bg-green-600 p-5 md:w-1/2 md:p-10 lg:w-1/4"
  >
    <h4 class="text-4xl font-bold">Trust us</h4>
    <div class="h-[300px]">
      <Community />
      <Starrrr />
    </div>
    <div>
      <p>Why develop with Weasel?</p>
      <strong>It shows you the way</strong>
    </div>
  </div>

  <div class="flex w-auto rounded-xl bg-pink-300 p-5 md:w-1/2 md:p-10 lg:w-3/4">
    <div class="flex flex-wrap content-start gap-2">
      {
        quotos.map((quote: string) => (
          <div class="rounded-xl bg-stone-50 px-2 py-1">
            <p class="text-md font-semibold md:text-lg">"{quote}"</p>
          </div>
        ))
      }
    </div>
  </div>
</div>

<script>
  function getQuotes() {
    const screenWidth = window.innerWidth;
    if (screenWidth < 1024) {
      //Mobile Screens and screens <= 1024px
      return 10; //10 cards
    } else {
      // screens > 1024px
      return 40; //40 cards
    }
  }

  const quoteLimit = getQuotes();
</script>
