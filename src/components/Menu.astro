---
import MenuButton from "../components/common/MenuButton.astro";
---

<div
  class="relative z-10"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  x-show="menuOpen"
  x-cloak
>
  <!--     
      Background backdrop, show/hide based on modal state.
  
      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
  <div
    class="fixed inset-0 bg-gray-800 bg-opacity-20 backdrop-blur-sm transition-opacity"
    x-show="menuOpen"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
  >
  </div>

  <div class="w-90 fixed inset-x-0 bottom-8 z-10 px-4 md:px-12">
    <!--
          Modal panel, show/hide based on modal state.
  
          Entering: "ease-out duration-300"
            From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            To: "opacity-100 translate-y-0 sm:scale-100"
          Leaving: "ease-in duration-200"
            From: "opacity-100 translate-y-0 sm:scale-100"
            To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        -->
    <div
      class="relative mx-auto flex w-full transform flex-col items-center space-y-4 overflow-hidden rounded-xl bg-slate-900 p-10 shadow-xl transition-all sm:items-start md:space-y-6"
      x-show="menuOpen"
      x-on:click.away="menuOpen = false"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-full"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 translate-y-full"
      x-cloak
    >
      <MenuButton text="1. Weasel" color="bg-pink-300" />
      <MenuButton text="2. Knows" color="bg-yellow-300" />
      <MenuButton text="3. The" color="bg-orange-600" />
      <MenuButton text="4. Way" color="bg-green-600" />
    </div>
  </div>
</div>

<style>
  [x-cloak] {
    display: none;
  }
</style>
